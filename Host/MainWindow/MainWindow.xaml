<Window 
    x:Class="Host.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:Host" mc:Ignorable="d" ResizeMode="NoResize" 
    Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Frame x:Name="Main"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="Settings" FontSize="20" Click="Settings_Click">Settings</Button>
            <Button x:Name="Stats" FontSize="20" Click="Stats_Click">Stats</Button>
        </StackPanel>
        <Button FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,50">Start</Button>
    </Grid>
</Window>